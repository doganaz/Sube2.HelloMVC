@model IEnumerable<Sube2.HelloMvc.Models.Ders>

@{
    ViewData["Title"] = "Dersler";
}

<h1>Dersler</h1>

<p><a asp-action="AddDers" asp-controller="Ders" class="btn btn-outline-primary">Yeni Ders Ekle</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Ders Adı</th>
            <th>Kredi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ders in Model)
        {
            <tr>
                <td>@ders.Dersad</td>
                <td>@ders.Kredi</td>
                <td>
                    <a asp-action="EditDers" asp-controller="Ders" asp-route-dersid="@ders.Dersid" class="btn btn-sm btn-outline-success">Düzenle</a> |
                    <a onclick="return confirm('Emin misiniz?')" asp-action="DeleteDers" asp-controller="Ders" asp-route-dersid="@ders.Dersid" class="btn btn-sm btn-outline-danger">Sil</a>
                    @* <a class="btn btn-sm btn-outline-success" href="/Ders/EditDers/@ders.Dersid">Düzenle</a> | <a onclick="return confirm('Emin misiniz?')" class="btn btn-sm btn-outline-danger" href="/Ders/DeleteDers/@ders.Dersid">Sil</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>
